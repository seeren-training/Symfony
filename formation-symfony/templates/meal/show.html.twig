{% extends 'base_member.html.twig' %}

{% block title %}Repas {{ meal.id }} - {{ parent() }}{% endblock %}

{% block body %}
    <div class="row">
        <h1 class="col">Repas {{ meal.id }}</h1>

        <li>
            Id: {{ meal.id }} <br>
            Name: {{ meal.name }}<br>
            Description: {{ meal.description }} <br>
            Attendees: {{ meal.maxAttendees }} <br>
            Date: {{ meal.date|date('Y/m/d : h-i') }} <br>
            Category:
            {% for category in meal.categories %}
                {{ category.name }}
            {% endfor %}
            <br>
        </li>




    </div>
{% endblock %}



